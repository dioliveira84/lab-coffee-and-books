<h3>Edit place</h3>
<form method="POST" action="/places/{{ place._id}}">
  <label>Name:</label>
  <input type="" name="name" placeholder="Name" value="{{ place.name}}">
  <label>Type:</label>
  <select name="type">
    <option value="{{place.type}}" selected>{{place.type}}</option>
    <option value="coffee shop">Coffee Shop</option>
    <option value="bookstore">Book Store</option>
  </select>
  <label>Address</label>
  <input type="text" name="latitude" id="latitude" placeholder="Latitude" value="{{ place.location.coordinates.[1]}}">
  <input type="text" name="longitude" id="longitude" placeholder="Longitude" value="{{ place.location.coordinates.[0]}}">
  <button type="submit" name="" id="submit">Edit</button>
</form>

<a href="/places">Back to the list</a>